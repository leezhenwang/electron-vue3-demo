{
  "name": "readit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "build": {
    "appId": "com.yourcompany.musicplayer",
    "productName": "Music Player",
    "directories": {
      "output": "dist/installers"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload/index.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icons/icon.png"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .js,.vue.html,.css",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist node_modules/.cache/electron-builder",
    "build": "npm run clean && vite build && electron-builder"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^35.0.3",
    "electron-builder": "^26.0.12",
    "electron-win-state": "^1.1.22",
    "nodemon": "^3.1.9",
    "sass": "^1.86.0",
    "vite": "^6.2.0"
  }
}
